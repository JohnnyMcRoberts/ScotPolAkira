<UserControl x:Class="ScotPolWpfApp.Views.ResultsImporterView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ScotPolWpfApp.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0">Main Importer</Label>

        <Grid Grid.Row="1">

            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" Grid.Row="0" 
                    x:Name="LoadNotes" 
                    Content="{Binding LoadNotesText}"  
                    Command="{Binding Path=LoadNotesCommand}"/>
            <Button Grid.Column="1" Grid.Row="0" 
                    x:Name="LoadConstituencyResults" 
                    Content="{Binding LoadConstituencyResultsText}"  
                    Command="{Binding Path=LoadConstituencyResultsCommand}"
                    IsEnabled="{Binding HasNotes}"/>
            <Button Grid.Column="2" Grid.Row="0" 
                    x:Name="LoadListResults" 
                    Content="{Binding LoadListResultsText}"  
                    Command="{Binding Path=LoadListResultsCommand}"
                    IsEnabled="{Binding HasNotes}"/>


            <Label   Grid.Row="1"  Grid.Column="0">Notes file:</Label>
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="Stretch"  Height="23" TextWrapping="Wrap" IsReadOnly="True"  
                     Text="{Binding NotesFile, Mode=OneWay}" VerticalAlignment="Center" 
                     Margin="10,0,10,0"/>

            <Label   Grid.Row="2"  Grid.Column="0">Constituencies file:</Label>
            <TextBox Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="Stretch"  Height="23" TextWrapping="Wrap" IsReadOnly="True"  
                     Text="{Binding ConstituenciesFile, Mode=OneWay}" VerticalAlignment="Center" 
                     Margin="10,0,10,0"/>

            <Label   Grid.Row="3"  Grid.Column="0">Regional Lists file:</Label>
            <TextBox Grid.Row="3" Grid.Column="1" Grid.ColumnSpan="2"  HorizontalAlignment="Stretch"  Height="23" TextWrapping="Wrap" IsReadOnly="True"  
                     Text="{Binding RegionalListsFile, Mode=OneWay}" VerticalAlignment="Center" 
                     Margin="10,0,10,0"/>


            <TabControl    Grid.Row="4"  Grid.Column="0" Grid.ColumnSpan="3" >
                <TabItem Header="Party Names and Abbreviations">

                    <DataGrid AutoGenerateColumns="False"
                              ItemsSource="{Binding Path=PartyNotesList, Mode=OneWay}"
                              IsReadOnly="True" HorizontalScrollBarVisibility="Auto">

                        <DataGrid.Columns>

                            <DataGridTextColumn Header="Abbreviation" 
                                                Binding="{Binding Abbreviation}" 
                                                MinWidth="150"/>

                            <DataGridTextColumn Header="Full Name" 
                                                Binding="{Binding FullName}" 
                                                Width="Auto"/>

                        </DataGrid.Columns>
                    </DataGrid>

                </TabItem>
                <TabItem Header="Constituencies">

                </TabItem>
                <TabItem Header="Regional Lists">

                </TabItem>
            </TabControl>

        </Grid>

    </Grid>
</UserControl>
